<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.oy.dao.AdminDao">
	<resultMap type="Admin" id="AdminResultMap">
		<id property="id" column="admin_id"/>
		<result property="username" column="username"/>
		<result property="password" column="password"/>
		<result property="role_name" column="role_name"/>
	</resultMap>
	
	<select id="login" parameterType="Admin" resultMap="AdminResultMap">
		select * from admin_tb where username=#{username} and password=#{password} limit 1
	</select>
	<select id="findAdmins" parameterType="Map" resultMap="AdminResultMap">
		select * from admin_tb <where>
			<if test="username!=null and username!='' ">
				username like #{username}
			</if>
		</where>
	</select>

	<select id="getCount" parameterType="Map" resultType="Integer">
		select count(*) from admin_tb
		<where>
			<if test="username!=null and username!='' ">
				username like #{username}
			</if>
		</where>
	</select>
	<update id="updateAdmin" parameterType="Admin">
		update admin_tb set username=#{username},password=#{password} where admin_id=#{id}
	</update>
	<insert id="addAdmin" useGeneratedKeys="true" keyProperty="admin_id" >
			insert into admin_tb (username,password)values(#{username},#{password})
	</insert>
	<delete id="deleteAdmin" parameterType="Integer">
		delete  from admin_tb where admin_id=#{id}
	</delete>
</mapper>